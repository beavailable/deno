#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	dh_auto_build
	mkdir build/; \
	cp deno_$$(dpkg --print-architecture) build/deno

override_dh_auto_install:
	dh_auto_install
	dh_install build/deno usr/bin/
	dh_install completions/deno /usr/share/bash-completion/completions/
	dh_install completions/_deno usr/share/zsh/vendor-completions/
	dh_install completions/deno.fish usr/share/fish/vendor_completions.d/

override_dh_auto_clean:
	dh_auto_clean
	rm -rf build
